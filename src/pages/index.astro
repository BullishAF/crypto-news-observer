---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";

const posts = (await Astro.glob("./news/*.{md,mdx}")).sort(
  (a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);

const pr = (await Astro.glob("./pr/*.{md,mdx}")).sort(
  (a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);

const last_pr = pr.slice(0, 3);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>
  
  <div id="cr-widget-marquee"
        data-coins="bitcoin,ethereum,bnb,cardano,dogecoin,matic-network,solana,shiba-inu,avalanche"
        data-theme="light"
        data-show-symbol="true"
        data-show-icon="true"
        data-show-period-change="true"
        data-period-change="24H"
        data-api-url="https://api.cryptorank.io/v0"
      >
        <a href="https://cryptorank.io">Coins by Cryptorank</a>
        <script src="https://cryptorank.io/widget/marquee.js"></script>
      </div>  
  <div>
      <div class="text-3xl w-full font-bold mb-5 mt-10">Latest News</div>
    </div>
          <div class="divider my-0"></div>

    {
      last_posts.map((post) => (
        <HorizontalCard
          title={post.frontmatter.title}
          img={post.frontmatter.heroImage}
          desc={post.frontmatter.description}
          url={post.url}
          target="_self"
        />
        <div class="divider my-0"></div>
      ))
    }
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5265597461872915"
     crossorigin="anonymous"></script>
<ins class="adsbygoogle"
     style="display:block"
     data-ad-format="fluid"
     data-ad-layout-key="-gi-25+3u-b2+j7"
     data-ad-client="ca-pub-5265597461872915"
     data-ad-slot="5059164681"></ins>
<script>
     (adsbygoogle = window.adsbygoogle || []).push({});
</script>
  
   <div>
      <div class="text-3xl w-full font-bold mb-5 mt-10">Press Releases</div>
    </div>
  
  <div class="divider my-0"></div>
  
  {
      last_pr.map((pr) => (
        <HorizontalCard
          title={pr.frontmatter.title}
          img={pr.frontmatter.heroImage}
          desc={pr.frontmatter.description}
          url={pr.url}
          badge={pr.badge}
          tag={pr.tag}
          target="_self"
        />
        <div class="divider my-0"></div>
      ))
    }    
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5265597461872915"
     crossorigin="anonymous"></script>
<ins class="adsbygoogle"
     style="display:block"
     data-ad-format="fluid"
     data-ad-layout-key="-gi-25+3u-b2+j7"
     data-ad-client="ca-pub-5265597461872915"
     data-ad-slot="5059164681"></ins>
<script>
     (adsbygoogle = window.adsbygoogle || []).push({});
</script>
 </BaseLayout>
