---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";

const posts = (await Astro.glob("./news/*.{md,mdx}")).sort(
  (a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);

const pr = (await Astro.glob("./pr/*.{md,mdx}")).sort(
  (a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);

const last_pr = pr.slice(0, 3);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>
     
  <iframe data-aa='2144784' src='//ad.a-ads.com/2144784?size=320x50' style='width:320px; height:50px; border:0px; padding:0; overflow:hidden; background-color: transparent;'></iframe>  
   <div>
      <div class="text-3xl w-full font-bold mb-5 mt-10">Latest News</div>
    </div>
          <div class="divider my-0"></div>

    {
      last_posts.map((post) => (
        <HorizontalCard
          title={post.frontmatter.title}
          img={post.frontmatter.heroImage}
          desc={post.frontmatter.description}
          url={post.url}
          target="_self"
        />
        <div class="divider my-0"></div>
      ))
    }
  
   <div>
      <div class="text-3xl w-full font-bold mb-5 mt-10">Press Releases</div>
    </div>
  
  <div class="divider my-0"></div>
  
  {
      last_pr.map((pr) => (
        <HorizontalCard
          title={pr.frontmatter.title}
          img={pr.frontmatter.heroImage}
          desc={pr.frontmatter.description}
          url={pr.url}
          badge={pr.badge}
          tag={pr.tag}
          target="_self"
        />
        <div class="divider my-0"></div>
      ))
    }    
  <div class="divider my-0"></div>
   <iframe data-aa='2145041' src='//ad.a-ads.com/2145041?size=336x280' style='width:336px; height:280px; border:0px; padding:0; overflow:hidden; background-color: transparent;'></iframe>
 </BaseLayout>
