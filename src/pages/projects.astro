---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "pr">
  
  <div>
    <div class="text-2xl w-full font-bold mb-5 mt-10">Press Releases</div>
  </div>
  
   {
      last_pr.map((pr) => (
        <HorizontalCard
          title={pr.frontmatter.title}
          img={pr.frontmatter.heroImage}
          desc={pr.frontmatter.description}
          url={pr.url}
          target="_self"
        />
        <div class="divider my-0"></div>
      ))
    }
  </BaseLayout>
